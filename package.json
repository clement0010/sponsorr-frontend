{
  "name": "sponsorr-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "check:style": "run-p check:style:*",
    "check:style:lint": "lint(){ eslint --ext .js,.ts --max-warnings 0 ${1:-'.'}; }; lint",
    "check:style:format": "prettier --check './**/*'",
    "fix:style:lint": "fixLint(){ eslint --ext .js,.ts --max-warnings 0 --fix ${1:-'.'}; }; fixLint",
    "fix:style:format": "prettier --write './**/*'",
    "deploy": "npm run build && firebase deploy --only hosting",
    "start:firestore": "firebase emulators:start --only firestore",
    "test:firestore": "mocha --exit src/__test__/profile.spec.js"
  },
  "dependencies": {
    "@vue/composition-api": "^1.0.0-rc.8",
    "axios": "^0.21.1",
    "core-js": "^3.6.5",
    "firebase": "^8.6.1",
    "vue": "^2.6.11",
    "vue-router": "^3.2.0",
    "vuetify": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@firebase/rules-unit-testing": "^1.3.1",
    "@types/firebase": "^3.2.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-vue": "^7.10.0",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "lint-staged": "^9.5.0",
    "mocha": "^8.4.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.32.0",
    "sass-loader": "^10.0.0",
    "typescript": "~4.1.5",
    "vue-cli-plugin-vuetify": "~2.4.0",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.7.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "eslintIgnore": [
    "*.spec.js"
  ]
}
